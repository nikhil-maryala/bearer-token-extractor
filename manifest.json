{
  "manifest_version": 3,
  "name": "Bearer Token Extractor",
  "version": "1.2.0",
  "description": "UiPath token extractor - Captures bearer tokens and tenant information from UiPath portal",
  "permissions": [
    "webRequest",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.uipath.com/*",
    "https://alpha.uipath.com/*",
    "https://staging.uipath.com/*",
    "https://cloud.uipath.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
